<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:ProjectWork1._0.Models"
             xmlns:vm="clr-namespace:ProjectWork1._0.View_Models"
             x:Class="ProjectWork1._0.Views.SchermataVisualizzazioneFormule"
             x:DataType="vm:FormuleViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="SchermataVisualizzazioneFormule">


    <VerticalStackLayout>
        <Button
         Clicked="OnBackButtonClicked"
         BackgroundColor="Transparent"
         HorizontalOptions="Start"
         VerticalOptions="Start"
         Padding="10"
         HeightRequest="50"
         WidthRequest="50">
        </Button>

        <!-- âœ… CollectionView Raggruppata -->
        <CollectionView ItemsSource="{Binding FormuleRaggruppate}">
            <!--CollectionView.GroupHeaderTemplate>
                <DataTemplate x:DataType="models:FormulaGroup">
                    <Label Text="{Binding Titolo}"
                           FontSize="20"
                           FontAttributes="Bold"
                           Padding="10"
                           BackgroundColor="LightGray"/>
                </DataTemplate>
            </CollectionView.GroupHeaderTemplate-->

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Formula">
                    <Frame Margin="5" Padding="10" BackgroundColor="WhiteSmoke">
                        <Label Text="{Binding Descrizione}" FontSize="16"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>



    </VerticalStackLayout>
</ContentPage>