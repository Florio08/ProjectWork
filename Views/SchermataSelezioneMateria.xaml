<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectWork1._0.Views.SchermataSelezioneMateria"
             Title="SchermataSelezioneMateria">
    <VerticalStackLayout>
        <Button Clicked="OnBackButtonClicked"
                BackgroundColor="Transparent"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                Padding="10"
                HeightRequest="50"
                WidthRequest="50">
           <!-- <Image Source="back_arrow.png"
                   HeightRequest="30"
                   WidthRequest="30"
                   Aspect="AspectFit"/> -->
        </Button>
       
        <Button Text="ALGEBRA"
         HorizontalOptions="Fill" 
         HeightRequest="50"
         CornerRadius="25"
         BackgroundColor = "#FE5F55"
         FontFamily="Abyssinica SIL"
         FontSize="15"
         Clicked="OnBtnAlgebraClicked"
         />

        <Button Text="GEOMETRIA"
         HorizontalOptions="Fill"
         HeightRequest="50"
         CornerRadius="25"
         BackgroundColor = "#FE5F55"
         FontFamily="Abyssinica SIL"
         FontSize="15"
         Clicked="OnBtnGeometriaClicked"
         />

        <Button 
         x:Name="btnGoniometria"   
         Text="GONIOMETRIA"
         HorizontalOptions="Fill"
         HeightRequest="50"
         CornerRadius="25"
         BackgroundColor = "#FE5F55"
         FontFamily="Abyssinica SIL"
         FontSize="15"
         Clicked="OnBtnGoniometriaCkicked"
         />
    </VerticalStackLayout>
</ContentPage>